<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header" style="background: #2cbac4;">
                <h4 class="modal-title">Add Task</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>

            </div>
            <div class="modal-body">
                <form class="form" method="post" action="Home/InsertEToDo">
                    <div class="form-group">
                        <label for="note">Task:</label>
                        <input type="text" class="form-control" id="note" placeholder="Add Task Discription" required name="Task">
                    </div>
                    <div class="form-group">
                        <label for="date">DueDate:</label>
                        <input type="datetime-local" class="form-control" id="date" placeholder="Enter date" required name="DueDate">
                    </div>
                    <p class="text-center">
                        <button type="submit" class="btn btn-success">Submit</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                    </p>
                </form>
            </div>
        </div>

    </div>
</div>
