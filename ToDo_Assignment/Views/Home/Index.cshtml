@model IEnumerable<ToDo_Assignment.Models.ToDoModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-4  zoom">
           
            <table class="table table-borderless" style="background-color: ghostwhite;">

                <tr class="border-bottom">
                    <th>To Do(3)</th>
                </tr>
                <tr class="border-bottom">
                    <td><span class="glyphicon glyphicon-plus bg-danger"></span><button class="text" data-toggle="modal" data-target="#myModal">Add task</button></td>
                </tr>
                @foreach (var task in Model.Where(n => n.TStatus=="new"))
                {
                    <tr>
                        <td>
                            <input id="@task.Task" type="checkbox" name="task" value="@task.Task"  />
                        </td>
                        <td>
                            <label for="@task.Task">@task.Task</label>
                            <label for="@task.DueDate">@task.DueDate</label>
                        </td>
                    </tr>

                }

            </table>
            </div>
        <div class="col-sm-4  zoom">
            <table class="table table-borderless" style="background-color: ghostwhite;">
                <tr class="border-bottom">
                    <th>In Progress(0)</th>
                </tr>
                <tr class="border-bottom">
                    <th><p></p></th>
                </tr>
                @foreach (var task in Model.Where(n => n.TStatus == "InProgress"))
                {
                    <tr>
                        <td>
                            <input id="@task.Task" type="checkbox" name="task" value="@task.Task" />
                        </td>
                        <td>
                            <label for="@task.Task">@task.Task</label>
                            <label for="@task.DueDate">@task.DueDate</label>
                        </td>
                    </tr>
                }

            </table>
        </div>
        <div class="col-sm-4  zoom">
            <table class="table table-borderless" style="background-color: ghostwhite;">
                <tr class="border-bottom">
                    <th>Completed(3)</th>
                </tr>
                <tr class="border-bottom">
                    <th><p></p></th>
                </tr>
                @foreach (var task in Model.Where(n => n.TStatus == "Completed"))

                {
                    <tr>
                        <td>
                            <input id="@task.Task" type="checkbox" name="task" value="@task.Task" />
                        </td>
                        <td>
                            <label for="@task.Task">@task.Task</label>
                            <label for="@task.DueDate">@task.DueDate</label>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
