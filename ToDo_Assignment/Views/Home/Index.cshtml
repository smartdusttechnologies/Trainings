@model IEnumerable<ToDo_Assignment.Models.ToDoModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-4  zoom">
            <table class="table table-borderless" style="background-color: ghostwhite;">
                <tr class="border-bottom">
                    <th>To Do(3)</th>
                </tr>
                <tr class="border-bottom">
                    <td><span class="glyphicon glyphicon-plus bg-danger"></span><button class="btn btn-info" data-toggle="modal" data-target="#myModal">Add task</button></td>
                </tr>
                <tr class="border-bottom">
                    <td><input type="checkbox" value="@Html.DisplayNameFor(model => model.Task)">&nbsp;</></td>
                </tr>
                <tr class="border-bottom">
                    <td><input type="checkbox" value="">&nbsp;new</></td>
                </tr>
            </table>
        </div>
        <div class="col-sm-4  zoom">
            <table class="table table-borderless" style="background-color: ghostwhite;">
                <tr class="border-bottom">
                    <th>In Progress(0)</th>
                </tr>
                <tr class="border-bottom">
                    <th><p></p></th>
                </tr>
                <tr class="border-bottom">
                    <td><input type="checkbox" value="">&nbsp;new</></td>
                </tr>
                <tr class="border-bottom">
                    <td><input type="checkbox" value="">&nbsp;new</></td>
                </tr>
            </table>
        </div>
        <div class="col-sm-4  zoom">
            <table class="table table-borderless" style="background-color: ghostwhite;">
                <tr class="border-bottom">
                    <th>Completed(3)</th>
                </tr>
                <tr class="border-bottom">
                    <th><p></p></th>
                </tr>
                <tr class="border-bottom">
                    <td><input type="checkbox" value="">&nbsp;new</></td>
                </tr>
                <tr class="border-bottom">
                    <td><input type="checkbox" value="">&nbsp;new</></td>
                </tr>
            </table>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add Note</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>

            </div>
            <div class="modal-body">
                <form class="form" action="">
                    <div class="form-group">
                        <label for="note">Note:</label>
                        <input type="text" class="form-control" id="note" placeholder="Enter Note" required name="note">
                    </div>
                    <div class="form-group">
                        <label for="date">Date:</label>
                        <input type="date" class="form-control" id="date" placeholder="Enter date" required name="date">
                    </div>
                    <p class="text-center">
                        <button type="submit" class="btn btn-success">Submit</button>
                    </p>
                </form>
            </div>
        </div>

    </div>
</div>
